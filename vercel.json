{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
        "buildCommand": "cd apps/web && NEXT_TYPESCRIPT_STRICT=false pnpm run build",
        "outputDirectory": ".next"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://orenna-backend-production.up.railway.app/api/$1"
    }
  ]
}